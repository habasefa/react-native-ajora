{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react-native",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "importHelpers": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false,
    "lib": ["ES2020"],
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "legacy",
    "packages",
    "./types.d.ts",
    "legacy/richText/RichText.tsx",
    "legacy/richText/markdownStyle.tsx"
  ],
  "exclude": ["node_modules", "legacy/__tests__", "example/node_modules", "lib"],
  "compilerOptions": {
    "paths": {
      "@ajora-ai/core": ["./packages/core/index.ts"],
      "@ajora-ai/shared": ["./packages/shared/index.ts"],
      "@ajora-ai/native": ["./packages/native/index.ts"],
      "@ajora-ai/agent": ["./packages/agent/index.ts"]
    }
  }
}
